@page
@model MyFirstCoreWebApp.Pages.Restaurant.RestaurantModel
<h2>Restaurant Hello</h2>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="searchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
    
    <table class="table">
        @foreach (var item in Model.MyRestList)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Location</td>
            <td><select disabled class="form-control" asp-for="@item.Type" asp-items="Model.Cuisines"></select></td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Detail" asp-route-restId="@item.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Edit" asp-route-restId="@item.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
            </td>
            <td>
                <a asp-page="./List" onclick="return confirm('Are you sure you want to delete this item?');"
                   asp-page-handler="Delete" asp-route-shopId="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </table>
    <a asp-page="./Edit" asp-route-restId="00000" class="btn btn-primary">Add New</a>
</form>